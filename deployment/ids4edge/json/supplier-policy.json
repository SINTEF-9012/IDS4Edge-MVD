{
  "@context": [
    "https://w3id.org/edc/connector/management/v0.0.1"
  ],
  "@type": "PolicyDefinition",
  "@id": "require-actor-supplier",
  "policy": {
    "@type": "Set",
    "permission": [
      {
        "action": "use",
        "constraint": {
          "leftOperand": "ActorCredential.actorType",
          "operator": "eq",
          "rightOperand": "Supplier"
        }
      }
    ]
  }
}